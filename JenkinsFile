pipeline {
    agent any

    stages {
        stage('w/o docker test') {
            steps {
                sh '''
                    echo '"Without Docker"'
                    ls -la
                    touch container-no.txt
                '''
            }
        }

        stage('with docker') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }

            steps {
                sh 'echo "With Docker"'
                sh 'npm --version'
                sh '''
                    echo "With Docker"
                    ls -la
                    touch container-no.txt
                '''
            }
        }
    }
}